<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <h2 class="mb-4 text-center" style="color: #fe424d;">Welcome, <%= user.username %></h2>

    <!-- Profile Card -->
    <div class="card mb-4 shadow-lg" style="max-width: 400px; margin: 0 auto;">
        <div class="card-header" style="background-color: #fe424d;color: white;">
            <h5>Your Profile</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title"><strong>Username:</strong> <%= user.username || 'Not set' %></h5>
            <p class="card-title"><strong>Email:</strong> <%= user.email || 'Not set' %></p>
        </div>
    </div>

    <!-- Wishlist Section -->
    <h4 class="text-center mb-4 text-danger">Your Wishlist ‚ù§Ô∏è</h4>
    <% if (user.wishlist.length === 0) { %>
        <p class="text-center">No hotels in wishlist yet.</p>
    <% } else { %>
        <div class="row">
            <% user.wishlist.forEach(listing => { %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100" style="width: 20rem;">
                        <!-- Image Section -->
                        <img src="<%= listing.image %>" class="card-img-top img-fluid" alt="listing_image" style="object-fit: cover; height: 200px;">

                        <div class="card-body">
                            <!-- Price and Country -->
                            <p class="card-title mb-1 text-muted">&#36;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                            <p class="card-title mb-2 text-muted"><%= listing.country %></p>
                            
                            <!-- Add a button for actions like remove from wishlist -->
                            <form method="POST" action="/wishlist/remove/<%= listing._id %>">
                                <button type="submit" class="btn" style="background-color: #f44336; color: white;">Remove from Wishlist</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<!-- Hosted Listings Section -->
<h4 class="text-center mb-4 text-primary ">Your Hosted Listings üè°</h4>
<% if (hostedListings.length === 0) { %>
    <p class="text-center">You haven't hosted any listings yet.</p>
<% } else { %>
    <div class="row">
        <% hostedListings.forEach(listing => { %>
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100" style="width: 20rem;">
                    <!-- Image Section -->
                    <img src="<%= listing.image %>" class="card-img-top img-fluid" alt="listing_image" style="object-fit: cover; height: 200px;">

                    <div class="card-body">
                        <!-- Title and Location -->
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-title mb-1 text-muted"><%= listing.location %>, <%= listing.country %></p>

                        <!-- Price -->
                        <p class="card-title mb-1 text-muted">&#36;<%= listing.price.toLocaleString("en-IN") %>/night</p>

                        <!-- Description -->
                        <p class="card-text mb-3"><%= listing.description.substring(0, 80) %>...</p>

                        <!-- Edit and Delete buttons -->
                        <div class="d-flex justify-content-between">
                            <!-- Edit Button -->
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-info" style="width: 48%;">Edit</a>
                            
                            <!-- Delete Form -->
                            <form method="post" action="/listings/<%= listing._id %>/?_METHOD=Delete" style="width: 48%;">
                                <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this listing?');">Delete</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>
<!-- Reserved Hotels Section -->
<h4 class="text-center mb-4 text-success">Your Reserved Hotels üè®</h4>
<% if (user.reservations.length === 0) { %>
    <p class="text-center">No hotels reserved yet.</p>
<% } else { %>
    <div class="row">
        <% user.reservations.forEach(listing => { %>
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100" style="width: 20rem;">
                    <img src="<%= listing.image %>" class="card-img-top img-fluid" alt="listing_image" style="object-fit: cover; height: 200px;">
                    <div class="card-body">
                        <p class="card-text mb-1 text-muted">&#36;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                        <p class="card-text mb-2 text-muted"><%= listing.country %></p>
                        <form method="POST" action="/reservations/cancel/<%= listing._id %>">
                            <button type="submit" class="btn btn-warning w-100">Cancel Reservation</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>
</div>
<% layout("/layouts/boilerplate")%>

<style>
    .img-custom {
      width: 100%; /* Default size for large screens */
    }

    @media (max-width: 992px) {
      .img-custom {
        width: 100%; /* Medium devices */
      }
    }

    @media (max-width: 768px) {
      .img-custom {
        width: 50%; /* Small devices */
       
      }
      .navbar{
        width:140%;
      }
      .bold-line{
        width:140%;
      }
    }

  </style>



<div class="row mt-3 whole">
    <div class="col-8 offset-3 ">
        <h3><%=listing.title%></h3>
    </div>
    <div class="card col-8 offset-3">
        <div class="card " style="width: 22rem;">
            <img src="<%=listing.image%>" class="card-img-top show-img img-fluid img-custom"  alt="listing_image" >
        <div></div>
        <p class="card-text mb-1"><i>Owned By : <%=listing.owner.username%></i></p>
        <p class="card-text mb-1">&#36;<%=listing.price.toLocaleString("en-IN")%>/night</p>
        <p class="card-text mb-1"><%=listing.location%></p>
        <p class="card-text mb-1"><%=listing.country%></p>
        <p class="card-text mb-1"><%=listing.type%></p>
        
    </div> 
    <p class="card-text  "><%=listing.description%></p>
   

    </div>
</div>
<!-- SHOE BTN ONLY IF USER IS THE OWNER OF LISTING -->
<%if(currUser && listing.owner._id.equals(currUser._id)){%>
    <div class="btns mb-3">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark  offset-3 edit-btn">Edit</a>
    
        <form method="post" action="/listings/<%=listing._id%>/?_METHOD=Delete">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>

    </div>
<%}%>

<form method="get" action="/book/<%=listing._id%>">
    <button class="btn btn-dark offset-3 ">Reserve</button>
</form>

<hr>

<div class="col-8 offset-3 mb-3 mt-3">
    <!-- CAN LEAVE A REVIEW IF LOGGEDIN -->
    <%if(currUser){%>
    <h4>Leave a Review</h4>
    <form method="post" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
       
        <div class="mb-3 mt-3">
             <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate " name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5"  />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <label for="comment" class="form-label" >Comments</label>
        <textarea name="review[comment]" id="comment" col="15" rows="6" class="form-control" required></textarea>
        <div class="invalid-feedback">Please write a review</div>
        <br>
        <button class="btn btn-dark">
            Submit
        </button>
    </form>
    <%}%>
    <hr>
    
    <p class="offset-5"><b>Reviews</b></p>  
    <div class="row">
        <%for(review of listing.reviews){ %>
            <div class="review-card col-5 ms-3 mb-3">
                <p class="card-text"><b>@<%=review.author.username%> :</b></p>
                <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                <p class="card-text"><%=review.comment%></p>
                <form class="mb-3 mt-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_METHOD=Delete">
                    <button class="btn btn-sm btn-outline-dark">Delete</button>
                </form>
               
            </div>
            
        <%}%>
    </div>
    
               
</div>

     


    